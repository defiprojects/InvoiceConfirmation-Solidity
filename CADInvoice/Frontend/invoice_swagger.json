{
  "swagger": "2.0",
  "info": {
    "title": "Sterling CAD Invoice Confirmation",
  "description": "The Sterling CAD Invoice confirmation / API allows integration with other applications, through a lighter and easier interface. .\nAll the resources available by the API are based on Restful services and the messages transferred in the JSON standard.\n",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "schemes": [
    "http"
  ],
  "basePath": "/api/v1",
  "produces": [
    "application/json"
  ],
  "paths": {
    "/invoice/access/add": {
      "post": {
        "summary": "Adds and grants access to a new User",
        "description": "Add and grant access to the User\n",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Address",
            "in": "formData",
            "description": "Public address",
            "required": true,
            "type": "string"
          },
          {
            "name": "Access Type",
            "in": "formData",
            "description": "Access Type",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "Access Control"
        ],
        "responses": {
          "200": {
            "description": "successful submission",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          },
          "400": {
            "description": "Response failed",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          }
        }
      }
    },
    "/invoice/access/revoke": {
      "put": {
        "summary": "Revokes User access",
        "description": "Revokes User access\n",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Address",
            "in": "formData",
            "description": "Public Address",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "Access Control"
        ],
        "responses": {
          "200": {
            "description": "successful submission",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          },
          "400": {
            "description": "Response failed",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          }
        }
      }
    },
    "/invoice/access/consult": {
      "get": {
        "summary": "Consult Users with access",
        "description": "Consult Users with access",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Address",
            "in": "query",
            "description": "User address",
            "required": false,
            "type": "string"
          },
          {
            "name": "access",
            "in": "query",
            "description": "User access type",
            "required": false,
            "type": "string"
          },
          {
            "name": "situation",
            "in": "query",
            "description": "User Situation",
            "required": false,
            "type": "string"
          }
        ],
        "tags": [
          "Access Control"
        ],
        "responses": {
          "200": {
            "description": "Returns list of Users",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/User"
              }
            }
          },
          "400": {
            "description": "Error or empty list of Invoices",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          }
        }
      }
    },
    "/invoice/generate": {
      "post": {
        "summary": "Generates a Vendor's invoice",
        "description": "Generates a Vendor's invoice\n",
        "parameters": [
          {
            "in": "body",
            "name": "invoice",
            "schema": {
              "$ref": "#/definitions/invoice"
            }
          }
        ],
        "tags": [
          "invoice"
        ],
        "responses": {
          "200": {
            "description": "successful submission",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          },
          "400": {
            "description": "Response failed",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          }
        }
      }
    },
    "/invoice/invalidate": {
      "put": {
        "summary": "Invalidates an invoice",
        "description": "Invalidate a customer invoice\n",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "formData",
            "name": "Address",
            "description": "Customers Address",
            "required": false,
            "type": "string",
            "format": "byte"
          }
        ],
        "tags": [
          "invoice"
        ],
        "responses": {
          "200": {
            "description": "successful submission",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          },
          "400": {
            "description": "Response failed",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          }
        }
      }
    },
    "/invoice/consult": {
      "get": {
        "summary": "Invoice consultation",
        "description": "Consult invoices",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Address",
            "in": "query",
            "description": "Customers Address",
            "required": false,
            "type": "string",
            "format": "byte"
          },
          {
            "name": "vendor",
            "in": "query",
            "description": "Issuing vendor",
            "required": false,
            "type": "string"
          },
          {
            "name": "name",
            "in": "query",
            "description": "Customer's Name",
            "required": false,
            "type": "string"
          },
          {
            "name": "email",
            "in": "query",
            "description": "Customer's E-mail address",
            "required": false,
            "type": "string"
          },
          {
            "name": "item",
            "in": "query",
            "description": "Name of item",
            "required": false,
            "type": "string"
          },
          {
            "name": "data",
            "in": "query",
            "description": "Invoice issue date",
            "required": false,
            "type": "string"
          }
        ],
        "tags": [
          "invoice"
        ],
        "responses": {
          "200": {
            "description": "Returns list of invoices",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/invoice"
              }
            }
          },
          "400": {
            "description": "Error or empty list of invoices",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          }
        }
      }
    },
    "/invoice/vendor/add": {
      "post": {
        "summary": "Add a Issuing Vendor",
        "description": "Aadd an Issuing Vendor\n",
        "parameters": [
          {
            "in": "body",
            "name": "vendor",
            "schema": {
              "$ref": "#/definitions/vendor"
            }
          }
        ],
        "tags": [
          "vendor"
        ],
        "responses": {
          "200": {
            "description": "successful submission",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          },
          "400": {
            "description": "Response failed",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          }
        }
      }
    },
    "/invoice/vendor/revoke": {
      "put": {
        "summary": "Revokes a Issuing Vendor",
        "description": "Revokes a Issuing Vendor\n",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "formData",
            "name": "Address",
            "description": "Vendor's Address",
            "required": false,
            "type": "string",
            "format": "byte"
          }
        ],
        "tags": [
          "vendor"
        ],
        "responses": {
          "200": {
            "description": "successful submission",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          },
          "400": {
            "description": "Response failed",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          }
        }
      }
    },
    "/invoice/vendor/consult": {
      "get": {
        "tags": [
          "vendor"
        ],
        "summary": "Consult a Issuing Vendor",
        "description": "Consult a Issuing Vendor",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Address",
            "in": "query",
            "description": "Customer's Address",
            "required": false,
            "type": "string"
          },
          {
            "name": "name",
            "in": "query",
            "description": "Vendor's Name",
            "required": false,
            "type": "string"
          },
          {
            "name": "situation",
            "in": "query",
            "description": "Vendor's Situation",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Returns list of vendors",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/vendor"
              }
            }
          },
          "400": {
            "description": "Error or empty list of invoices",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "Address": {
          "type": "string",
          "description": "Public Address"
        },
        "profile": {
          "type": "string",
          "description": "user profile"
        },
        "situation": {
          "type": "boolean",
          "description": "User situation"
        }
      }
    },
    "invoice": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Customer's full name"
        },
        "email": {
          "type": "string",
          "description": "Customer E-mail"
        },
        "vendor": {
          "$ref": "#/definitions/vendor",
          "description": "Issuing Vendor"
        },
        "item": {
          "type": "string",
          "description": "accomplished item"
        },
        "data": {
          "type": "string",
          "description": "Item date in [DD / MM / YYYY] format"
        },
        "duration": {
          "type": "integer",
          "format": "int16",
          "description": "Duration in hours of the item"
        },
        "situation": {
          "type": "boolean",
          "description": "Invoice situation"
        }
      }
    },
    "vendor": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string",
          "description": "Issuing Vendor Code"
        },
        "name": {
          "type": "string",
          "description": "Valid if an invoice is valid"
        },
        "validity": {
          "type": "string",
          "description": "starting date of the Issuing vendor"
        },
        "validityFin": {
          "type": "string",
          "description": "final effective date of the Financial Institution"
        },
        "situation": {
          "type": "boolean",
          "description": "Issuing vendor's situtation"
        }
      }
    },
    "ApiResponse": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "type": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}